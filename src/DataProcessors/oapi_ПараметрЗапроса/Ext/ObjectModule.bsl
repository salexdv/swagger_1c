Функция ПолучитьОписание() Экспорт
	
	ОписаниеПараметра = Новый Структура();
	ОписаниеПараметра.Вставить("name", ИмяПараметра);
	
	Если ЯвляетсяЧастьюАдреса Тогда
		ОписаниеПараметра.Вставить("in", "path");
	Иначе
		ОписаниеПараметра.Вставить("in", "query");
	КонецЕсли;
	
	ОписаниеДанных = oapi_Описание.ПолучитьОписаниеДанных(Значение, Сервис);
	ОписаниеПараметра.Вставить("description", ОписаниеДанных.description);
	ОписаниеПараметра.Вставить("required", ОписаниеДанных.required);
	
	ОписаниеДанных.Удалить("description");
	ОписаниеДанных.Удалить("required");
	
	ОписаниеПараметра.Вставить("schema", ОписаниеДанных);
	
	Возврат ОписаниеПараметра;
	
КонецФункции

